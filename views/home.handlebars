<h2>Home HandleBars</h2>
<h2>Lista de productos por HandleBars</h2>
{{#if payload}}

<select name="ordenar" id="ordenar">
<option value="desc">Ordenar Por Precio</option>
<option value="desc">Descendente</option>
<option value="asc">Ascendente</option>
</select>
<input type="text" id="inputBuscador" placeholder="Buscardor de Producto">
<button id="botonBuscar">Buscar</button>

<div class="container">
    
    {{#each payload}}
    <div class="box">
    
       <p>{{this._id}}</p>
       <p>{{this.title}}</p>
       <p>${{this.price}} </p>
       <p> STOCK: {{this.stock}}</p>

        <button > + </button><br>
        <button onclick="descripcionProducto(this)"> Description </button>   
    </div>
    {{/each}}
</div>
{{else}}
<p>No hay productos para mostrar</p>
{{/if}}<br><br>
